<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head %>
</head>
<body>

  <header>
    <% include ./partials/header %>
  </header>

    <section id="user-manager" class="content-block">
      <% include ./partials/users-manager %>
    </section>

    <div class="container">
      <form class="content-block" id="hearsay-generator">
        <h4 class="create-hearsay"> Post a hearsay </h4>
        <div class="form-group">
          <textarea class="form-control" name="body" rows="3" cols="30" placeholder="Type in your hearsay here"></textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-default" type="submit" name="name" value="Post Hearsay">
        </div>
      </form>
    </div>

    <section id="users">
    </section>

    <section id="hearsay-list">
    </section>

  <div id="dialog" class="modal hide fade" role="dialog" aria-labelledby="dialogLabel">
    <div class="modal-body">
      Are you sure?
    </div>
    <div class="modal-footer">
      <button type="button" data-dismiss="modal" class="btn btn-primary" id="confirm-delete">Delete</button>
      <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
    </div>
  </div>

  <div id="editUserModal" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit User</h4>
        </div>
        <div class="container">
          <form id="edit-user" action="/api/users" method='post'>
            <div class="modal-body">
              <div class="form-group" id="username">
                <input class="form-control" type='text' name='user[username]' placeholder='Username'>
              </div>
              <div class="form-group" id="password">
                <input class="form-control" type='password' name='user[password]' placeholder='Password'>
              </div>
              <label>State:</label>
                <select id="state" name="user[state]">
                  <option value="000">-Select State-</option>
                </select>
              <br />
              <label>City:</label>
                <select id="city" name="user[city]">
                  <option value="000">-Select City-</option>
                </select>
              <br />
              <div class="modal-footer">
                <input type='submit' class="btn btn-default" data-dismiss="modal">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
