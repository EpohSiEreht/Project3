<!--  SIGN UP MODAL -->
<div class="container">
  <div id="signUpModal" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal">&times;</button>
         <h4 class="modal-title">Sign Up</h4>
       </div>
      <div class="modal-body">
        <form id="sign-up" action="/api/users" method='post'>
          <div class="form-group" id="first-name">
            <input class="form-control" type='firstname' name='user[firstName]' placeholder='First Name'>
          </div>
          <div class="form-group" id="last-name">
            <input class="form-control" type='lastname' name='user[lastName]' placeholder='Last Name'>
          </div>
          <div class="form-group" id="username">
            <input class="form-control" type='text' name='user[username]' placeholder='Username'>
          </div>
          <div class="form-group" id="password">
            <input class="form-control" type='password' name='user[password]' placeholder='Password'>
          </div>
          <label>State:</label>
            <select class="form-control" id="state" name="user[state]">
              <option value="000">-Select State-</option>
            </select>
          <br />
          <label>City:</label>
            <select class="form-control" id="city" name="user[city]">
              <option value="000">-Select City-</option>
            </select>
          <br />
          <div class="form-group" id="email">
            <input class="form-control" type='email' name='user[email]' placeholder='email'>
          </div>
          <input id="sign-up-submit" class="btn btn-default" type='submit'>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!--  LOGIN MODAL -->
<div class="container">
  <div id="loginModal" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal">&times;</button>
         <h4 class="modal-title">Login</h4>
       </div>
        <div class="modal-body">
          <form id="log-in">
            <div class="form-group">
              <input class="form-control" type='text' name='username' placeholder='username'>
            </div>
            <div class="form-group">
              <input class="form-control" type='password' name='password' placeholder='password'>
            </div>
            <input id="login-submit" class="btn btn-default" type='submit'>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

