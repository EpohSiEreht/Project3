<div class="user-manager-prompt">
  <!-- SignUp -->
  <h4>Sign-Up</h4>
  <form id="sign-up" action="/api/users" method='post'>
    <input type='text' name='user[username]' placeholder='username'>
    <input type='password' name='user[password]' placeholder='password'>
    <form id="dropdowns" action="index.html">
      <label>State:</label>
        <select id="state" name="network">
          <option value="000">-Select State-</option>
        </select>

      <br />

      <label>City:</label>
        <select id="model" name="model">
          <option value="000">-Select City-</option>
        </select>

      <br />

    </form>
    <input type='submit' style='visibility: hidden;'>
  </form>
</div>

<div class="user-manager-prompt">
  <!-- Login -->
  <h4>Log-In</h4>
  <form id="log-in">
    <input type='text' name='username' placeholder='username'>
    <input type='password' name='password' placeholder='password'>
    <input type='submit' style='visibility: hidden;'>
  </form>
</div>

<div class="update-password">
  <!-- Update Password -->
  <h4>Update Password</h4>
  <form id="update-password">
    <input type='text' name='password' placeholder='password'>
    <input type='submit' style='visibility: hidden;'>
  </form>
</div>
