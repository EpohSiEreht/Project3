<!--  Templates -->
<script id="hearsays-template" type="text/x-handlebars-template">
{{#each hearsays}}
  <div class="hearsay content-block">
    <h5 class="location"> <strong>Someone</strong> posted in</br> {{ this.location }} at {{ toHuman this.createdAt }}</h5>
    <div class="top-bar">
      <h2 class="username">  </h2>
      {{{option_dropdown this}}}
    </div>
    <p class="body bodyText">
      {{ this.bodyText }}
    </p>
    <div class="line">

    </div>
    <form class="form-inline" id="comment-generator">
      <div class="form-inline">
        <input type="hidden" name="hearsay-id" value={{this._id}}>
        <input class="form-control" type="text" name="bodyText" placeholder="comment">
        <input class="btn btn-default" type="submit" id="comment-submit">
      </div>
    </form>
    {{#each this.comment}}
    <section class="comment-list">
        <div class="comment">
          <h4 class="comment-username"> {{this.username}} </h4>
          <p class="comment-body"> {{this.bodyText}} </p>
        </div>
    </section>
     {{/each}}
  </div>
{{/each}}
</script>

<script id="search-template" type="text/x-handlebars-template">
  {{#each hearsays}}
  <div class="hearsay content-block">
    <h5 class="location"> Posted in {{ this.location }} at {{ toHuman this.createdAt }}<span id="post-tools">{{{delete_button this}}} {{{edit_button this}}}</span></h5>
    <ul class="nav nav-pills">
      <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          Options <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            {{{delete_button this}}}
          </li>
          <li>
            {{{edit_button this}}}
          </li>
        </ul>
      </li>
    </ul>
    <h2 class="username"> {{ this.username }} </h2>
    <p class="body">
      {{ this.bodyText }}
    </p>
    <form class="form-inline" id="comment-generator">
      <div class="form-inline">
        <input type="hidden" name="hearsay-id" value={{this._id}}>
        <input class="form-control" type="text" name="body" placeholder="comment">
        <input class="btn btn-default" type="submit" id="comment-submit">
      </div>
    </form>
    {{#each this.comment}}
    <section class="comment-list">
        <div class="comment">
          <h4 class="comment-username"> {{this.username}} </h4>
          <p class="comment-body"> {{this.bodyText}} </p>
        </div>
    </section>
     {{/each}}
  </div>
{{/each}}
</script>


<script id="cat-template" type="text/x-handlebars-template">
   <div class="cat-block">
     <img src={{ this.file }}>
   </div>
</script>
